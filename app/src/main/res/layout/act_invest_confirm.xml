<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_view"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="@dimen/dp_18"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/tv_invest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:textSize="@dimen/font_sp_15"
            android:textColor="@color/main_color"
            android:text="新手标1期"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_14"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_44"
                    android:textSize="@dimen/font_sp_14"
                    android:text="12.00%+4.88%"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_11"
                    android:textColor="@color/font_color_44"
                    android:textSize="@dimen/font_sp_14"
                    android:text="预测年化收益率"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_44"
                    android:textSize="@dimen/font_sp_14"
                    android:text="15天"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_11"
                    android:textColor="@color/font_color_44"
                    android:textSize="@dimen/font_sp_14"
                    android:text="投资期限"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_invest_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_color_44"
                    android:textSize="@dimen/font_sp_14"
                    android:text="15,000.00"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_11"
                    android:textColor="@color/font_color_44"
                    android:textSize="@dimen/font_sp_14"
                    android:text="可投金额"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/bg_color_f5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_sp_14"
                android:textColor="@color/font_color_44"
                android:text="账户余额（元）"/>

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/font_sp_14"
                android:textColor="@color/main_color"
                android:text="0.00"/>

            <Button
                android:id="@+id/btn_recharge"
                android:layout_width="44dp"
                android:layout_height="21dp"
                android:background="@drawable/main_2_radius_bg"
                android:text="充值"
                android:textColor="@color/white"
                android:textSize="@dimen/font_sp_13"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/bg_color_f5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_sp_14"
                android:textColor="@color/font_color_44"
                android:text="投资金额（元）"/>

            <com.app.common.commonwidget.EditTextDelView
                android:id="@+id/ed_invest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/font_sp_14"
                android:textColor="@color/font_color_44"
                android:inputType="number"
                android:textColorHint="@color/font_color_99"
                android:hint="起投金额100"
                android:background="@android:color/transparent"
                android:text=""/>

            <TextView
                android:id="@+id/tv_invest_all"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/font_sp_13"
                android:textColor="@color/main_color"
                android:text="全部投资"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/bg_color_f5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_sp_14"
                android:textColor="@color/font_color_44"
                android:text="预计收入（元）"/>

            <TextView
                android:id="@+id/tv_yuji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:layout_weight="1"
                android:textSize="@dimen/font_sp_14"
                android:textColor="@color/main_color"
                android:text="0"/>

            <TextView
                android:id="@+id/ed_warning"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/font_color_fc6472"
                android:drawableLeft="@drawable/ic_warning"
                android:drawablePadding="@dimen/dp_3"
                android:text="请输入金额"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/bg_color_f5"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_18">
            <TextView
                android:id="@+id/red_parcket"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_44"
                android:textSize="@dimen/font_sp_14"
                android:text="选择红包"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/red_parcket"
                android:layout_marginTop="@dimen/dp_35"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_color_44"
                android:textSize="@dimen/font_sp_14"
                android:text="应付金额："/>

                <TextView
                    android:id="@+id/total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/font_sp_14"
                    android:text="32323元"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:background="@color/main_color"
        android:textColor="@color/white"
        android:textSize="@dimen/font_sp_15"
        android:text="确认投资"/>
    
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_18"
            android:src="@drawable/ic_notice"/>

        <com.app.common.commonwidget.MarqueeView
            android:id="@+id/marqueeview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            app:mvDirection="bottom_to_top"
            app:mvAnimDuration="1000"
            app:mvInterval="3000"
            app:mvSingleLine="true"/>
        <TextView
            android:id="@+id/tv_notice_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_18"
            android:textSize="13sp"
            android:textColor="@color/font_color_55"
            android:text="@string/notice_more"
            android:drawablePadding="@dimen/dp_3"
            android:drawableRight="@drawable/ic_more"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/bg_color_f5"/>
</LinearLayout>
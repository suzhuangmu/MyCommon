<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_marginTop="@dimen/dp_7"
    android:layout_marginLeft="21dp"
    android:layout_marginRight="21dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    android:foreground="?android:attr/selectableItemBackground">
    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/red_space_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="91"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/iv_pocket"
                android:layout_width="56dp"
                android:layout_height="47dp"
                android:src="@drawable/iv_hongbao"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_9"
                android:textColor="@color/font_color_ff6767"
                android:maxLines="1"
                android:textSize="@dimen/dp_16"
                android:text="￥10"/>
        </LinearLayout>
        <View
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/vertical_red_line"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="239"
            android:padding="@dimen/dp_10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_sp_14"
                    android:textColor="@color/font_color_44"
                    android:text="新手注册红包"/>
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_sp_14"
                    android:textColor="@color/font_color_44"
                    android:text="使用条件：投资额≥200元"/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_sp_14"
                    android:textColor="@color/font_color_44"
                    android:text="有效期：2017-8-25"/>
            </LinearLayout>
            
            <Button
                android:id="@+id/btn_use"
                android:layout_width="68dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/red_radius_3_bg"
                android:textSize="@dimen/font_sp_13"
                android:textColor="@color/white"
                android:text="立即使用"/>

            <ImageView
                android:id="@+id/iv_banner"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_guoqi"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
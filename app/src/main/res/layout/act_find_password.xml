<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <include layout="@layout/title_view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_33"
        android:paddingLeft="63dp"
        android:paddingRight="@dimen/dp_52">

        <EditText
            android:id="@+id/ed_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_11"
            android:paddingBottom="@dimen/dp_11"
            android:background="@drawable/d7_radius_btn_bg"
            android:hint="请输入您的手机号码"
            android:textColorHint="@color/font_color_99"
            android:textColor="@color/font_color_66"
            android:textSize="@dimen/font_sp_14"
            android:inputType="phone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/dp_22"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="@drawable/d7_radius_btn_bg">
                <EditText
                    android:id="@+id/ed_certify"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_8"
                    android:hint="请输入验证码"
                    android:background="@android:color/transparent"
                    android:textColorHint="@color/font_color_99"
                    android:textColor="@color/font_color_66"
                    android:textSize="@dimen/font_sp_14"
                    android:inputType="phone"/>
                <Button
                    android:id="@+id/btn_get_certify"
                    android:layout_width="58dp"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginRight="@dimen/dp_8"
                    android:background="@drawable/btn_rigester_bg"
                    android:textColor="@color/bg_color_7698fc"
                    android:textSize="@dimen/dp_13"
                    android:text="免费获取"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_help"
                android:layout_width="21dp"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="center_vertical"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_findback_wenti"/>
        </LinearLayout>

        <EditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginRight="21dp"
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_11"
            android:paddingBottom="@dimen/dp_11"
            android:background="@drawable/d7_radius_btn_bg"
            android:hint="请输入新登录密码"
            android:textColorHint="@color/font_color_99"
            android:textColor="@color/font_color_66"
            android:textSize="@dimen/font_sp_14"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/ed_password_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginRight="21dp"
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_11"
            android:paddingBottom="@dimen/dp_11"
            android:background="@drawable/d7_radius_btn_bg"
            android:hint="再次确认密码"
            android:textColorHint="@color/font_color_99"
            android:textColor="@color/font_color_66"
            android:textSize="@dimen/font_sp_14"
            android:inputType="textPassword"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/dp_22"
            app:cardCornerRadius="@dimen/dp_3">
            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main_color"
                android:textSize="@dimen/font_sp_14"
                android:textColor="@color/white"
                android:text="确  认"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <include layout="@layout/title_view" />
    <ImageView
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:src="@drawable/ic_right"
        android:layout_marginTop="29dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:textColor="@color/font_color_33"
            android:textSize="@dimen/font_sp_15"
            android:text="充值成功"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_9"
            android:textSize="@dimen/font_sp_13"
            android:textColor="@color/font_color_66"
            android:text="您的资金已到账"/>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_marginLeft="67dp"
        android:layout_marginRight="@dimen/dp_67"
        android:background="@drawable/main_2_radius_bg"
        android:textSize="@dimen/font_sp_14"
        android:textColor="@color/white"
        android:text="确  认"/>
</LinearLayout>